<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" /> <!-- Màu background -->
            <corners android:radius="12dp" /> <!-- Bo tròn góc -->
            <stroke android:width="1dp" android:color="@color/dark_blue" /> <!-- Viền ngoài -->
            <!-- Bạn có thể thêm padding nếu cần -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
