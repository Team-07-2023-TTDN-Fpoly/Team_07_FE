<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:layout_margin="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgback"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ql" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật loại áo cưới"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Ma_loai_ao"
        style="@style/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:startIconDrawable="@drawable/ma">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_white"
            android:clickable="false"
            android:focusable="false"
            android:inputType="none"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Tenloaiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/qao">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"
            android:inputType="text"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_undo"
            style="@style/AppCompatButtonStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Hoàn tác"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            style="@style/AppCompatButtonStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Cập nhập"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>





</LinearLayout>