<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_detail_input_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chọn tháng"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/icon_calendar">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"
            android:inputType="text"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_detail_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên khoản chi"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/baseline_create_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_detai_input_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiền chi trả"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/icon_money">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"
            android:inputType="number"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_detail_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/icon_description">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppCompatButtonStyle"
        android:text="Thêm mới"
        android:layout_marginVertical="12dp"
        android:layout_gravity="bottom"
        />

</LinearLayout>