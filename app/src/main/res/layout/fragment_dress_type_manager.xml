<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dresstype.DressTypeManagerFragment"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:id="@+id/lout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="5dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/ds" />

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="7"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Danh sách loại áo cưới"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvloaiao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lout"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/add_item"
        android:foreground="@drawable/button_add_item" />
</RelativeLayout>