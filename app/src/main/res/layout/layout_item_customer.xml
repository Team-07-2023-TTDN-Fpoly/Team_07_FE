<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/gray"
    android:background="@drawable/background_delete"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cusname"
        android:text="nguyen van a"
        android:textSize="19dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cusphone"
        android:text="phone: "
        android:textSize="16dp"
     />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cusphonesob"
        android:text="phone phu: "
        android:textSize="16dp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cusngaysinh"
            android:text="ngay sinh"
            android:textSize="16dp"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cusemail"
        android:text="email: "
        android:textSize="16dp"
     />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cusaddres"
        android:text="dia chi: "
        android:textSize="16dp"
    />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="xÃ³a"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/btn_delete_item"
            android:layout_margin="10dp"
            android:background="@drawable/background_delete"
            android:layout_gravity="center"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/icon_right"

        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="50dp"
        />

</androidx.cardview.widget.CardView>