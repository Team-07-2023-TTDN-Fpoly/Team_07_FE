<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.UpdateDetailFragment"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_detail_input_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chọn tháng"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/icon_calendar">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"
            android:inputType="text"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <!--    TextInput-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_detail_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên khoản chi"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/baseline_create_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_detail_input_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiền chi trả"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/icon_money">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"
            android:inputType="number"
            android:lines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_detail_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        style="@style/TextInputLayout"
        app:startIconDrawable="@drawable/icon_description">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/background_text_input"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/layout_btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reload_item"
            style="@style/AppCompatButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Hoàn tác"
            android:layout_marginVertical="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_item"
            style="@style/AppCompatButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:layout_marginVertical="8dp"
            />
    </LinearLayout>

</LinearLayout>