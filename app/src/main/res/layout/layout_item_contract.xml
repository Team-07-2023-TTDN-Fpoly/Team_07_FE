<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Khách Hàng"
                android:textSize="20sp"
                android:textStyle="bold"
                android:lines="1"/>

            <TextView
                android:id="@+id/tv_sđt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Số điện thoại"
                android:textSize="18sp"
                android:paddingStart="12dp"/>

            <TextView
                android:id="@+id/tv_NK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Ngày Ký: "
                android:textSize="18sp"
                android:paddingStart="12dp"/>

            <TextView
                android:id="@+id/tv_Tc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiền Cọc"
                android:lines="1"
                android:textSize="18sp"
                android:paddingStart="12dp"/>
            <TextView
                android:id="@+id/tv_tcp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng Chi Phí: "
                android:lines="1"
                android:textSize="18sp"
                android:paddingStart="12dp"/>
            <TextView
                android:id="@+id/tv_tinhtrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tình Trạng"
                android:lines="1"
                android:textSize="18sp"
                android:paddingStart="12dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/icon_right"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/btn_disable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="180dp"
                android:background="@drawable/background_corner_full_white"
                android:gravity="center"
                android:maxLines="2"
                android:text="Xóa"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btn_change_pass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_change_pass"
                app:layout_constraintTop_toTopOf="@+id/btn_change_pass"
                tools:ignore="UnknownIdInLayout" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>